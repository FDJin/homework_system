    <!-- 增加用户 -->
    <insert id="addAccount" parameterType="gxun.soft.homework_system.domain0.Account">
        insert into account values(#{userId},#{password},#{accountType})
    </insert>
    <delete id="deleteAccountById" parameterType="int">
        delete from account where id=#{id}
    </delete>
    <!--更新密码-->
    <update id="updatePassword" parameterType="gxun.soft.homework_system.domain0.Account">
        update account set password=#{password} where userId=#{userId}
    </update>
    <!-- 查询单条记录 -->
    <select id="findAccountById" parameterType="int" resultType="gxun.soft.homework_system.domain0.Account">
        SELECT * FROM account WHERE userId = #{userId}
    </select>
    <!-- 查询所有用户 -->
    <select id="getAllAccounts" resultType="gxun.soft.homework_system.domain0.Account">
        select * from account
    </select>

</mapper>
