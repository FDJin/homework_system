<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gxun.soft.homework_system.dao.accountDao">
<!--设置domain类和数据库中表的字段一一对应，注意数据库字段和domain类中的字段名称不致，此处一定要！-->
    <resultMap id="BaseResultMap" type="gxun.soft.homework_system.domain.account">
        <id column="userId" property="userId" jdbcType="INTEGER" />
        <id column="password" property="password" jdbcType="INTEGER" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="accountType" property="accountType" jdbcType="INTEGER" />
    </resultMap>


    <!-- 查询单条记录 -->
    <select id="selectUserById" parameterType="int" resultMap="BaseResultMap">
        SELECT * FROM account WHERE userId = #{userId}
    </select>
    <!--用户登录验证-->
    <select id="userLogin" parameterType="user" resultType="User">
        SELECT *  FROM account WHERE userId = #{userId} AND password = #{password}
    </select>
    <insert id="addAccount">
        insert into account values(null,#{userId},#{password})
    </insert>
    <update id="updatepassword">
        update account set password=#{password} where userId=#{userId}
    </update>
</mapper>
